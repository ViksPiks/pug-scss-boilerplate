{
  "name": "pug-scss-boilerplate",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "parcel serve src/views/index.pug --open",
    "build": "parcel build src/views/index.pug",
    "stylelint:check": "stylelint ./src/**/*.scss",
    "format:check": "prettier --check ./**/*.{pug,scss,json,yaml,md}",
    "markdown:check": "markdownlint . --ignore node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@parcel/transformer-pug": "^2.8.0",
    "@parcel/transformer-sass": "^2.8.0",
    "@prettier/plugin-pug": "^2.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "markdownlint-cli": "^0.32.2",
    "parcel": "^2.8.0",
    "prettier": "^2.8.0",
    "stylelint": "^14.16.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^6.1.0"
  },
  "lint-staged": {
    "*.scss": [
      "stylelint",
      "prettier --check"
    ],
    "*.{pug,md,json,yaml}": "prettier --check",
    "*.md": "markdownlint"
  }
}
